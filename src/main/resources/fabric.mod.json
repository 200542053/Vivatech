{
  "schemaVersion": 1,
  "id": "united-manufacturing",
  "version": "${version}",

  "name": "United Manufacturing",
  "description": "Electric marvels: cooler, healthier, brighter, and cheaper than gas",
  "authors": ["The Cotton Team"],
  "contact": {
    "homepage": "https://github.com/CottonMC/UnitedManufacturing",
    "issues": "https://github.com/CottonMC/UnitedManufacturing/issues"
  },
  "license": "MIT",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.cottonmc.um.UnitedManufacturing"
    ],
    "client": [
      "io.github.cottonmc.um.client.UMClient"
    ]
  },
  "mixins": [
    {
      "config": "united-manufacturing.client.json",
      "environment": "client"
    },
    {
      "config": "united-manufacturing.common.json",
      "environment": "*"
    }
  ],

  "requires": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "libblockattributes": "*",
    "silk": "*",
    "cotton": "*",
    "cotton-energy": "*",
    "cotton-resources": "*"
  }
}

